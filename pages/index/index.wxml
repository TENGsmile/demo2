<view class='main'>
  <!--轮播图 -->
  <view class='slides'>
    <swiper autoplay indicator-dots>
      <swiper-item wx:for="{{swiperList}}" wx:key="{{index}}">
        <navigator>
          <image src="{{item}}"></image>
        </navigator>
      </swiper-item>
    </swiper>
  </view>
</view>


  <view class="menu-list">
    <block wx:for="{{newLists}}" wx:key="{{index}}">
      <view class="menu-item">
        <navigator url="../{{item.en}}/{{item.en}}?en={{item.en}}" class="menu-item-main" id="{{index}}" bindtap="tapMenuItem">
          <text class="menu-item-name">{{item.cn}}</text>
          总数{{item.count}}
          <image
            class="menu-item-arrow"
            src="../image/arrowright.png">
          </image>
        </navigator>
      </view>
    </block>
  </view>
